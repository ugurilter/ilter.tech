---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

import Layout from "@/layouts/Layout.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import PostCard from "@/components/PostCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import Milestone from "@/components/Milestone.astro";
import Link from "@/components/shared/Link.astro";
import convertAsteriskToStrongTag from "@/utils/convertAsteriskToStrongTag";

import presentation from "@/data/presentation";
import projects from "@/data/projects";
import milestones from "@/data/milestones";

const posts = (await getCollection("posts")).sort(function (first, second) {
    return second.data.publishedAt.getTime() - first.data.publishedAt.getTime();
});
---

<Layout>
    <main class="flex flex-col gap-20">
        <article
            class="flex flex-col gap-8 md:flex-row-reverse md:justify-end md:gap-48">
            {
                
                presentation.profile && (
                    <div class="flex flex-col items-center gap-3">
                        <div id="ani-circle" class="ani-circle"/>
                        
                        <div class="has-tooltip text-center">
                            <span id="st-tooltip" class='absolute top-[360px] right-[275px] tooltip rounded p-1 bg-gray-900 shadow-l text-white'></span>
                            <Image
                                id="profile-pic"
                                src={presentation.profile}
                                class="self-center rounded-full has-tooltip"
                                alt="Your Profile"
                                width="250"
                                height="250"
                            ></Image>
                        </div>

                        <div class="inline-flex items-center py-[2px] px-[12px] rounded-[6px] bg-blue-950 text-l font-extralight text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 9l10.5-3m0 6.553v3.75a2.25 2.25 0 01-1.632 2.163l-1.32.377a1.803 1.803 0 11-.99-3.467l2.31-.66a2.25 2.25 0 001.632-2.163zm0 0V2.25L9 5.25v10.303m0 0v3.75a2.25 2.25 0 01-1.632 2.163l-1.32.377a1.803 1.803 0 01-.99-3.467l2.31-.66A2.25 2.25 0 009 15.553z" /></svg>
                            <div id="listen-label" class="pl-2 w-[100px] flex gap-2 ml-1 font-sans text-[12px] leading-5">
                                Listening:
                            </div>
                            <div id="listening" class="w-[150px] flex gap-2 ml-1 font-sans text-[12px] leading-5"><br/></div>
                        </div>
                        <div class="inline-flex items-center py-[2px] px-[12px] rounded-[6px] bg-blue-950 text-l font-extralight text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 01-.657.643 48.39 48.39 0 01-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 01-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 00-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 01-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 00.657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 01-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.4.604-.4.959v0c0 .333.277.599.61.58a48.1 48.1 0 005.427-.63 48.05 48.05 0 00.582-4.717.532.532 0 00-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.96.401v0a.656.656 0 00.658-.663 48.422 48.422 0 00-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 01-.61-.58v0z" /></svg>
                            <div id="play-label" class="pl-2 w-[100px] flex gap-2 ml-1 font-sans text-[12px] leading-5">
                                Playing:
                            </div>
                            <div id="playing" class="w-[150px] flex gap-2 ml-1 font-sans text-[12px] leading-5"><br/></div>
                        </div>
                        <div class="inline-flex items-center py-[2px] px-[12px] rounded-[6px] bg-blue-950 text-l font-extralight text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 12.75c1.148 0 2.278.08 3.383.237 1.037.146 1.866.966 1.866 2.013 0 3.728-2.35 6.75-5.25 6.75S6.75 18.728 6.75 15c0-1.046.83-1.867 1.866-2.013A24.204 24.204 0 0112 12.75zm0 0c2.883 0 5.647.508 8.207 1.44a23.91 23.91 0 01-1.152 6.06M12 12.75c-2.883 0-5.647.508-8.208 1.44.125 2.104.52 4.136 1.153 6.06M12 12.75a2.25 2.25 0 002.248-2.354M12 12.75a2.25 2.25 0 01-2.248-2.354M12 8.25c.995 0 1.971-.08 2.922-.236.403-.066.74-.358.795-.762a3.778 3.778 0 00-.399-2.25M12 8.25c-.995 0-1.97-.08-2.922-.236-.402-.066-.74-.358-.795-.762a3.734 3.734 0 01.4-2.253M12 8.25a2.25 2.25 0 00-2.248 2.146M12 8.25a2.25 2.25 0 012.248 2.146M8.683 5a6.032 6.032 0 01-1.155-1.002c.07-.63.27-1.222.574-1.747m.581 2.749A3.75 3.75 0 0115.318 5m0 0c.427-.283.815-.62 1.155-.999a4.471 4.471 0 00-.575-1.752M4.921 6a24.048 24.048 0 00-.392 3.314c1.668.546 3.416.914 5.223 1.082M19.08 6c.205 1.08.337 2.187.392 3.314a23.882 23.882 0 01-5.223 1.082" /></svg>
                            <div id="work-label" class="pl-2 w-[100px] flex gap-2 ml-1 font-sans text-[12px] leading-5">
                                Working on: <br/> Editing:
                            </div>
                            <div id="working" class="w-[150px] flex gap-2 ml-1 font-sans text-[12px] leading-5"><br/></div>
                        </div>
                       
                    </div>
                )
            }

            <div class="flex flex-col gap-8">
                <h1 class="text-3xl text-neutral-100 flex items-center gap-2">
                    {presentation.title}
                </h1>

                <h2
                    class="w-auto max-w-[60ch] leading-6"
                    set:html={convertAsteriskToStrongTag(
                        presentation.description
                    )}
                />

                <SocialLinks />
            </div>
        </article>

        <article class="flex flex-col gap-8">
            <header class="flex w-full flex-row justify-between gap-2">
                <h3 class="text-lg text-neutral-100">Latest posts</h3>
                <Link
                    href="/posts"
                    label="See all posts"
                    isUnderline
                    target="_self"
                />
            </header>
            {posts.length === 0 && <p>Soon, stay connected ðŸ‘€...</p>}

            <section class="flex flex-col w-full gap-4 md:flex-row md:flex-wrap">
                {
                    posts.length !== 0 &&
                        posts
                            .slice(0, 3)
                            .map((post) => (
                                <PostCard
                                    publishedAt={post.data.publishedAt}
                                    title={post.data.title}
                                    description={post.data.description}
                                    slug={post.slug}
                                />
                            ))
                }
            </section>
        </article>

        <!-- <article class="flex flex-col gap-8">
            <header class="flex w-full flex-row justify-between gap-2">
                <h3 class="text-lg text-neutral-100">Experiences</h3>
            </header>

            <div class="-my-6">
                {
                    milestones.length !== 0 &&
                        milestones
                        .map((milestone) => (
                            <Milestone
                                company = {milestone.company}
                                start = {milestone.start}
                                end = {milestone.end}
                                country= {milestone.country}
                                city = {milestone.city}
                                position= {milestone.position}
                                description = {milestone.description ?? ''}
                            />
                        ))
                }
            
            </div>
        </article> -->

        <!-- <article class="flex flex-col gap-8">
            <header class="flex w-full flex-row justify-between gap-2">
                <h3 class="text-lg text-neutral-100">
                    Selected projects ({projects.length})
                </h3>
            </header>
            {projects.length === 0 && <p>Oops, I must work^^^^^</p>}

            <section class="flex flex-col gap-4">
                {
                    projects.length !== 0 &&
                        projects.map((project) => <ProjectCard {...project} />)
                }
            </section>
        </article> -->

        <article class="flex flex-col gap-8">
            <header class="flex w-full flex-row justify-between gap-2">
                <h3 class="text-lg text-neutral-100">Get in touch</h3>
            </header>
            <p>
                Email me at <Link
                    href={`mailto:${presentation.mail}`}
                    label={presentation.mail}
                /> or follow me via my social links.
            </p>

            <SocialLinks />
        </article>
    </main>
</Layout>
